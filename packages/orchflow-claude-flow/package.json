{
  "name": "@orchflow/claude-flow",
  "version": "0.1.0",
  "description": "Natural language orchestration for Claude via injection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "orchflow": "./dist/cli-injected.js"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:watch": "nodemon --watch src --ext ts --exec 'npm run build'",
    "dev": "nodemon --watch src --ext ts --exec 'npm run start'",
    "start": "node dist/cli-injected.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage test-data test-e2e-data",
    "benchmark": "node scripts/benchmark.js",
    "docs:build": "typedoc --out docs-dist src/index.ts",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "orchflow",
    "claude",
    "orchestration",
    "ai",
    "mcp",
    "natural-language",
    "parallel-processing",
    "workflow"
  ],
  "author": "OrchFlow Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/orchflow/orchflow.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/which": "^3.0.4",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "lru-cache": "^10.2.0",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1",
    "which": "^5.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
