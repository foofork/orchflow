{
  "name": "@orchflow/gui",
  "version": "0.1.0",
  "private": true,
  "license": "MIT OR Apache-2.0",
  "scripts": {
    "dev": "PORT=$(node scripts/find-port.js) && vite dev --port $PORT",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "tauri:dev": "SQLX_OFFLINE=true tauri dev",
    "tauri:build": "SQLX_OFFLINE=true tauri build",
    "tauri:build:debug": "SQLX_OFFLINE=true tauri build --debug",
    "release:prepare": "npm run check && npm run build && npm run test",
    "release:build": "npm run release:prepare && npm run tauri:build",
    "release:bundle": "npm run release:build && npm run release:sign",
    "release:sign": "node scripts/sign-bundles.js",
    "updater:keygen": "bash scripts/generate-updater-keys.sh",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run build && npm run test:all",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.27.4",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/ws": "^8.5.9",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/commands": "^6.3.2",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-python": "^6.1.3",
    "@codemirror/lang-rust": "^6.0.1",
    "@codemirror/state": "^6.3.3",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.22.2",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.0.0",
    "@tauri-apps/plugin-os": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.0.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "fuse.js": "^7.1.0",
    "ws": "^8.14.2"
  },
  "type": "module"
}
