{
  "name": "@orchflow/gui",
  "version": "0.1.0",
  "private": true,
  "license": "MIT OR Apache-2.0",
  "scripts": {
    "dev": "PORT=$(node scripts/find-port.js) && vite dev --port $PORT",
    "dev:test": "vite dev --port $PORT",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "tauri:dev": "SQLX_OFFLINE=true tauri dev",
    "tauri:build": "SQLX_OFFLINE=true tauri build",
    "tauri:build:debug": "SQLX_OFFLINE=true tauri build --debug",
    "release:prepare": "npm run check && npm run build && npm run test",
    "release:build": "npm run release:prepare && npm run tauri:build",
    "release:bundle": "npm run release:build && npm run release:sign",
    "release:sign": "node scripts/sign-bundles.js",
    "updater:keygen": "bash scripts/generate-updater-keys.sh",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run build && npm run test:all",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run --config vitest.config.performance.ts",
    "test:visual": "npm run test:visual:cleanup && playwright test",
    "test:visual:cleanup": "node scripts/cleanup-test-environment.js",
    "test:visual:update": "npm run test:visual:cleanup && playwright test --update-snapshots",
    "test:visual:percy": "npm run test:visual:cleanup && percy exec -- playwright test",
    "test:visual:ui": "npm run test:visual:cleanup && playwright test --ui",
    "test:visual:report": "playwright show-report",
    "test:visual:debug": "npm run test:visual:cleanup && playwright test --debug",
    "lighthouse": "lhci autorun",
    "lighthouse:assert": "lhci assert",
    "lighthouse:view": "lhci open",
    "bench": "vitest bench",
    "bench:watch": "vitest bench --watch",
    "bench:report": "vitest bench --reporter=json --outputFile=test-results/benchmark-results.json",
    "test:mutation": "stryker run",
    "test:mutation:incremental": "stryker run --incremental",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:test": "eslint **/*.test.ts **/*.spec.ts --config .eslintrc-test.js",
    "lint:test:fix": "eslint **/*.test.ts **/*.spec.ts --config .eslintrc-test.js --fix",
    "test:validate-patterns": "node scripts/validate-test-patterns.js"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@percy/playwright": "^1.0.8",
    "@playwright/test": "^1.54.1",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/html-reporter": "^3.1.0",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@stryker-mutator/vitest-runner": "^9.0.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.22.5",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tauri-apps/cli": "^2.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/ws": "^8.5.9",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.7.1",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-python": "^6.1.6",
    "@codemirror/lang-rust": "^6.0.1",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language": "^6.11.2",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/search": "^6.5.9",
    "@codemirror/state": "^6.4.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.35.1",
    "@tauri-apps/api": "^2.1.0",
    "@tauri-apps/plugin-dialog": "^2.3.0",
    "@tauri-apps/plugin-fs": "^2.1.0",
    "@tauri-apps/plugin-os": "^2.1.0",
    "@tauri-apps/plugin-process": "^2.1.0",
    "@tauri-apps/plugin-shell": "^2.1.0",
    "@tauri-apps/plugin-updater": "^2.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "fuse.js": "^7.1.0",
    "ws": "^8.14.2"
  },
  "type": "module"
}
