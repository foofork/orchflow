{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "productName": "OrchFlow",
  "version": "0.1.0",
  "identifier": "com.orchflow.app",
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi", "nsis"],
    "icon": [],
    "resources": {
      "binaries/tmux": "bin/tmux",
      "binaries/nvim": "bin/nvim"
    },
    "externalBin": [
      "binaries/tmux",
      "binaries/nvim"
    ],
    "copyright": "Copyright (c) 2024 OrchFlow Team",
    "category": "Developer Tool",
    "shortDescription": "VS Code-style terminal-orchestrated developer GUI",
    "longDescription": "OrchFlow combines Neovim's editing power with intelligent terminal orchestration in a modern, fast desktop application.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "localhost",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.sectigo.com",
      "wix": {
        "language": "en-US",
        "template": "main.wxs"
      },
      "nsis": {
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["English"],
        "template": "installer.nsi"
      }
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "OrchFlow",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "dragDropEnabled": false
      }
    ]
  },
  "plugins": {
    "fs": {
      "scope": ["$HOME/.orchflow/**", "$APPDATA/**"]
    },
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "binaries/tmux",
          "cmd": "tmux",
          "args": true
        },
        {
          "name": "binaries/nvim", 
          "cmd": "nvim",
          "args": true
        }
      ]
    },
    "updater": {
      "active": false
    }
  }
}