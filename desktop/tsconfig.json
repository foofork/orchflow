{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["vitest/globals", "@types/node", "@testing-library/jest-dom", "@playwright/test"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    ".svelte-kit/types/**/*.d.ts",
    "src/test/vitest-mock-types.d.ts",
    "src/test/global.d.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "scripts/**/*",
    "node_modules",
    "dist",
    "build"
  ]
}